# Stage 1: build
FROM golang:1.24.4-alpine AS builder

WORKDIR /app

# Copy module files
COPY go.mod go.sum ./
RUN go mod download

# Copy semua file project yang dibutuhkan untuk build
COPY provider-service ./provider-service
COPY pkg ./pkg

# Ganti ke direktori service
WORKDIR /app/provider-service

RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -ldflags="-s -w" -o main

# Stage 2: minimal runtime image
FROM alpine:latest

WORKDIR /app

COPY --from=builder /app/provider-service/main .

EXPOSE 3000

CMD ["./main"]
